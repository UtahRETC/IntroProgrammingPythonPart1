#!/bin/bash

input="$1"
output="$2"

if [ ! -f "$input" ]; then
  echo "error: <inpput> file not found ('$input')"
  exit 1
elif [ -z "$output" ]; then
  echo "error: missing <output> argument"
  exit 1
fi

pandoc "$input" \
  --resource-path="$(dirname "$input")" \
  --from markdown-smart \
  --highlight-style=assets/document-theme.theme \
  -H assets/document-header.tex \
  -V linkcolor=Blue \
  -o "$output"
